NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/figure-collector?retryWrites=true&w=majority

# JWT Secrets (REQUIRED - Must be at least 32 characters in production)
# Generate secure secrets using: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_must_be_at_least_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_here_must_be_at_least_32_chars

# Token Expiry Settings (Optional)
ACCESS_TOKEN_EXPIRY=15m  # Default: 15 minutes
# ROTATE_REFRESH_TOKENS=true  # Optional: Enable refresh token rotation

# Scraper Service URL (set via environment variables)
# Dev: http://page-scraper-dev:3000
# Prod: http://page-scraper:3000
SCRAPER_SERVICE_URL=http://page-scraper:3000
