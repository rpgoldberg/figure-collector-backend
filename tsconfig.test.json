{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/types/**/*.d.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}