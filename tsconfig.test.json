{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2020",
    "types": ["jest", "node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}